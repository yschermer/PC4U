@model IEnumerable<PC4U.Models.ShoppingCartProduct>

@{
    ViewBag.Title = "Winkelwagen";
}

<h2>Winkelwagen</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountOfProducts)
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfProducts)
            </td>
        </tr>
    }
</table>
<div class="col-md-12" style="height:50px;">
    @using (Html.BeginForm("Create", "Orders", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Bestellen" class="btn btn-default" style="float:right;margin:10px;" />
    }
</div>
