@model IEnumerable<PC4U.Models.ShoppingCartProduct>

@{
    ViewBag.Title = "Winkelwagen";
}

<style>
    #totals tr td {
        border-top: 0px;
        width: 0 auto;
    }

    #totals tr {
        font-weight: bold;
    }
</style>

<h2>Winkelwagen</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Product.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Category.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AmountOfProducts)
        </th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountOfProducts)
            </td>
        </tr>
    }
</table>
<table id="totals" class="table" style="width:30%;margin-left:70%;">
    <tr>
        <td>Totaalbedrag excl. btw</td>
        <td>@ViewBag.PriceNonVat</td>
    </tr>
    <tr>
        <td>Btw</td>
        <td>@ViewBag.Vat</td>
    </tr>
    <tr>
        <td>Totaalbedrag incl. btw</td>
        <td>@ViewBag.PriceVat</td>
    </tr>
</table>
<div class="col-md-12" style="height:50px;">
    @using (Html.BeginForm("Create", "Orders", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <div style="float:right; width:200px;">
            <label for="InvoiceMail">Factuur per e-mail</label>
            <div class="col-md-1" style="margin-right:10px;">
                @Html.CheckBox("InvoiceMail", new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <div class="col-md-12">
                <input type="submit" value="Bestellen" class="btn btn-default" />
            </div>
        </div>
    }
</div>